@model IEnumerable<TeamManager.Models.PlayerModel>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Win)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Loss)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tie)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avatar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Win)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loss)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tie)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Player", new { id = item.Id }, null) |
                @Html.ActionLink("Details", "Details", "Player", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Player", new { id = item.Id }, null)
            </td>
        </tr>
    }
</table>