@model TeamManager.Models.TeamModel
@{
    ViewBag.Title = "Edit Team";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Edit Team</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "Teams", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <div>
                @Html.LabelFor(model => model.Name)
            </div>
            <div>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="top-buffer">
                @Html.LabelFor(model => model.Avatar)
            </div>
            <div>
                @Html.TextBoxFor(model => model.AvatarImage, new { type = "file", accept = "image/*" })
                @Html.ValidationMessageFor(model => model.AvatarImage)
            </div>
            <div class="top-buffer">
                <input type="submit" class="btn btn-success" value="Save" />
                @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Back", "Index", new { }, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>