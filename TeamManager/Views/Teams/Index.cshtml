@model IEnumerable<TeamManager.Models.TeamModel>
@{
    ViewBag.Title = "Teams";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Teams</h3>
    </div>
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Players
            </th>
            <th>
                Actions
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.Players.Count()
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Add player", "SelectPlayer", "PlayerToTeam", new { teamId = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>
@Html.ActionLink("New", "Create", new {}, new { @class = "btn btn-primary" })
