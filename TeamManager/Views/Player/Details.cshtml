@model TeamManager.Models.PlayerModel
@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>
<fieldset>
    <legend>PlayerModel</legend>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.Avatar)
    </div>
    <div class="display-field">
        @if (String.IsNullOrEmpty(Model.Avatar))
        {
            <img src="@Url.Content("~/Content/Avatars/Players/empty.png")" alt="Image" />
        }
        else
        {
            <img src="@Url.Content(String.Format("~/Content/Avatars/Players/{0}", Model.Avatar))" alt="Image" />
        }
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.TeamId)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.TeamId)
        @Html.ValidationMessageFor(model => model.TeamId)
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.Win)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Win)
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.Loss)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Loss)
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.Tie)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Tie)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>